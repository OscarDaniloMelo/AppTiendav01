<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"> <!-- Si MainActivity es tu activity de Login -->

    <!-- Imagen de fondo con transparencia -->
<ImageView
android:layout_width="match_parent"
android:layout_height="match_parent"
android:alpha="0.5"
android:scaleType="centerCrop"
android:src="@drawable/fondo_login" />

    <!-- Contenedor centrado -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center"
android:padding="16dp"
android:layout_centerInParent="true"> <!-- Centra el LinearLayout en el RelativeLayout -->

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Inicio de Sesi칩n"
    android:textColor="@android:color/white"
    android:textSize="24sp"
    android:textStyle="bold"
    android:layout_marginBottom="24dp"/>

<EditText
    android:id="@+id/editEmail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Correo electr칩nico"
    android:inputType="textEmailAddress"
    android:padding="12dp"
    android:background="@android:color/white"
    android:layout_marginBottom="12dp"/>

<EditText
    android:id="@+id/editPassword"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Contrase침a"
    android:inputType="textPassword"
    android:padding="12dp"
    android:background="@android:color/white"
    android:layout_marginBottom="24dp"/>

<Button
    android:id="@+id/btnLogin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#2196F3"
    android:text="Iniciar Sesi칩n"
    tools:ignore="VisualLintButtonSize"
    android:layout_marginBottom="16dp"/>

<com.google.android.gms.common.SignInButton
    android:id="@+id/sign_in_button_google"
    android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center_horizontal" />

</LinearLayout>

    </RelativeLayout>